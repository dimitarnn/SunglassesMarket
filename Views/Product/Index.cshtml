@model List<Product>

<div class="content">
    <h1>List of Products</h1>

    @if (Model.Count() == 0)
    {
        <h4>No Products to display!</h4>
        <a asp-action="Create" class="btn btn-primary">Create</a>
    }
    else
    {
        <a asp-action="Create" class="btn btn-primary" style="margin-bottom: 10px">Create</a>
        <table class="datatable" id="datatable">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Photo</th>
                    <th>Designer</th>
                    <th>Brand</th>
                    <th>Title</th>
                    <th>Type</th>
                    <th>Color</th>
                    <th>Price</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Id</td>
                        <td>
                            <img src="~/images/@product.Photo" alt="image" width="100" />
                        </td>
                        <td>@product.Designer</td>
                        <td>@product.Brand</td>
                        <td>@product.Title</td>
                        <td>@product.Type</td>
                        <td>@product.Color</td>
                        <td>@product.Price</td>
                        <td>
                            <a asp-controller="Product" asp-action="Edit" asp-route-productId="@product.Id">Edit</a> |
                            <a asp-controller="Product" asp-action="Delete" asp-route-productId="@product.Id">Delete</a> |
                            <a asp-controller="Product" asp-action="Details" asp-route-productId="@product.Id">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>