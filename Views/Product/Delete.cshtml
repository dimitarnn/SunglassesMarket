@model Product

<div class="content">
    <h1 class="text-danger">Are you sure you want to delete this Product?</h1>

    <hr />

    <dl>
        <dt>Id</dt>
        <dd>@Model.Id</dd>
        <dt>Phot</dt>
        <dd><img src="~/images/@Model.Photo" alt="image" width="100" /></dd>
        <dt>Designer</dt>
        <dd>@Model.Designer</dd>
        <dt>Brand</dt>
        <dd>@Model.Brand</dd>
        <dt>Title</dt>
        <dd>@Model.Title</dd>
        <dt>Type</dt>
        <dd>@Model.Type</dd>
        <dt>Color</dt>
        <dd>@Model.Color</dd>
        <dt>Price</dt>
        <dd>@Model.Price</dd>
    </dl>

    <a class="btn btn-danger" asp-controller="Product" asp-action="ConfirmDelete" asp-route-productId="@Model.Id">Delete</a>
</div>